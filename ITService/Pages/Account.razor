                <th>สถานะ</th>
               
            </tr>
        </thead>
    </table>


@code {

    private string UrlGet = "http://localhost:4000/api/";

    protected override async Task OnInitializedAsync()
    {
        await JSRuntime.InvokeAsync<object>("TestDataTablesAdd", "#example", UrlGet + "UserAccount/GetUserAccount");


    }
    public void Dispose()
    {
        JSRuntime.InvokeAsync<object>("TestDataTablesRemove", "#example");
    }

}

