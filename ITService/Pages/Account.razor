@using System.Net.Http.Json;
@inject IJSRuntime JSRuntime
@implements IDisposable



    <table id="example" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>รหัสพนักงาน</th>
                <th>ชื่อ</th>
